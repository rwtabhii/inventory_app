<h1 class="mt-5 mb-4">Registration</h1>
<% if(errorMessage){ %>
    <div class="alert alert-danger" role="alert">
        <%= errorMessage %>
    </div>
    <% }%>
        <form action="/register" method="post">
            
            <div class="mb-3">
                <label for="desc" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="desc" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Password</label>
                <input type="text" class="form-control" id="password" name="password" required>
            </div>
              <div>
                <button type="submit" class="btn btn-primary mx-auto p-2">Register</button>
              </div>
            
            
        </form>