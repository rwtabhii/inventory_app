{
  "compilerOptions": {
    "outDir": "./dist",        // Specifies the output folder for compiled files
    "rootDir": "./src",         // Specifies the input source folder
    "module": "commonjs",       // Adjust module system as needed
    "target": "es6",            // Set the JavaScript version
    "declaration": true,        // Generates .d.ts files
    "declarationDir": "./dist", // Puts .d.ts files in the dist folder
    "strict": true              // Enable strict type checking
  },
  "include": ["src"],           // Files or folders to include in compilation
  "exclude": ["node_modules"]   // Exclude dependencies
}
